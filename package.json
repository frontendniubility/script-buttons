{
  "name": "script-buttons-plus",
  "displayName": "Script Buttons ++",
  "publisher": "jimbo",
  "repository": {
    "type": "git",
    "url": "https://github.com/frontendniubility/script-buttons"
  },
  "description": "Auto create buttons in the bottom statusBar from your package.json",
  "version": "1.1.2",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "npm",
    "pnpm",
    "yarn",
    "node",
    "script",
    "scripts",
    "button",
    "buttons",
    "shortcuts",
    "actions",
    "package.json",
    "script-buttons.json"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "script-buttons.refreshScripts",
        "title": "Refetch the scripts from your package.json file"
      }
    ],
    "configuration": {
      "title": "My Node Package Manager",
      "properties": {
        "NodePackageManager.name": {
          "type": "string",
          "enum": [
            "pnpm",
            "npm",
            "yarn",
            ""
          ],
          "default": "pnpm",
          "description": "My Node Package Manager"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.63.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "@vscode/test-electron": "^1.6.2"
  },
  "volta": {
    "node": "20.11.0",
    "npm": "10.4.0"
  }
}
